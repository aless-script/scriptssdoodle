Instance.new("UICorner", toggleBtn).CornerRadius = UDim.new(0, 6)

toggleBtn.MouseButton1Click:Connect(function()
    env.AutoEncounter.Active = not env.AutoEncounter.Active
    if env.AutoEncounter.Active then
        toggleBtn.Text = "STOP"
        toggleBtn.BackgroundColor3 = Color3.fromRGB(255, 100, 100)
    else
        toggleBtn.Text = "START"
        toggleBtn.BackgroundColor3 = Color3.fromRGB(50, 200, 100)
    end
end)

local function updateDisplay(data)
    if not data then return end
    infoLabels.Name.Text = "Name: " .. (data.Name or data.RealName or "Unknown")
    infoLabels.Stars.Text = "Stars: " .. (data.Star or 0)
    infoLabels.Trait.Text = "Trait: " .. tostring(data.Ability or data.Trait or "None")
    
    local gender = "Genderless"
    if data.Gender == "Male" then gender = "Male"
    elseif data.Gender == "Female" then gender = "Female" end
    infoLabels.Gender.Text = "Gender: " .. gender
    
    local misprint = "No"
    if data.Shiny then misprint = "Shiny"
    elseif data.Color and data.Color ~= "Normal" then misprint = data.Color end
    infoLabels.Misprint.Text = "Misprint: " .. misprint
    
    infoLabels.Item.Text = "Item: " .. (data.Item or "None")
    infoLabels.Equip.Text = "Equip: " .. (data.Equipment or "None")
    infoLabels.Skin.Text = "Skin: " .. tostring(data.Skin or "None")
end

-- Helper function to simulate click on GUI button
local function clickButton(button)
    if not button then return false end
    
    pcall(function()
        for _, connection in pairs(getconnections(button.MouseButton1Click)) do
            connection:Fire()
        end
        for _, connection in pairs(getconnections(button.Activated)) do
            connection:Fire()
        end
    end)
    
    return true
end

-- Check if Doodle matches ALL filter criteria
local function checkMatch(data)
    if env.AutoEncounter.Filters.Species ~= "" then
        local targetLower = env.AutoEncounter.Filters.Species:lower()
        local nameLower = (data.Name or data.RealName or ""):lower()
        if not nameLower:find(targetLower) then
            return false, "Species Mismatch"
        end
    end
    
    if (data.Star or 0) < env.AutoEncounter.Filters.MinStars then
        return false, "Low Stars (" .. (data.Star or 0) .. " < " .. env.AutoEncounter.Filters.MinStars .. ")"
    end
    
    if env.AutoEncounter.Filters.HiddenTrait then
        if not data.HiddenTrait then
            return false, "No Hidden Trait"
        end
    end
    
    return true, "Perfect Match!"
end

-- Check if species matches (for chain mode)
local function checkSpeciesOnly(data)
    if env.AutoEncounter.Filters.Species == "" then
        return true
    end
    
    local targetLower = env.AutoEncounter.Filters.Species:lower()
    local nameLower = (data.Name or data.RealName or ""):lower()
    return nameLower:find(targetLower) ~= nil
end

-- Run away function with GUI click
local function runAway(userID)
    if not userID then
        warn("[AutoEncounter] No user ID for runaway")
        return false
    end
    
    print("[AutoEncounter] ðŸƒ Running away...")
    
    -- Try to click the Run button in the battle GUI
    local runButton = battleGui:FindFirstChild("RunButton", true) or 
                     battleGui:FindFirstChild("Run", true) or
                     battleGui:FindFirstChild("Flee", true)
    
    if runButton and runButton:IsA("GuiButton") then
        task.wait(0.1)
        clickButton(runButton)
        task.wait(0.2)
    end
    
    -- Fire the remote as backup/primary action
    local success, err = pcall(function()
        battleAction:FireServer({
            {
                ActionType = "Run",
                User = userID
            }
        })
    end)
    
    if not success then
        warn("[AutoEncounter] Run failed:", err)
        return false
    end
    
    return true
end

-- Attack function with GUI click
local function attack(myDoodle, enemyDoodle, moveSlot)
    if not myDoodle or not enemyDoodle then
        warn("[AutoEncounter] Missing Doodle data")
        return false
    end
    
    local moves = myDoodle.Moves or myDoodle.MovesPool or {}
    
    if #moves == 0 then
        warn("[AutoEncounter] No moves available, running away")
        return runAway(myDoodle.ID)
    end
    
    moveSlot = math.clamp(moveSlot or 1, 1, #moves)
    local selectedMove = moves[moveSlot]
    if not selectedMove then
        selectedMove = moves[1]
    end
    
    local moveName = type(selectedMove) == "string" and selectedMove or selectedMove.Name or selectedMove.Move
    
    if not moveName then
        warn("[AutoEncounter] Could not get move name, running away")
        return runAway(myDoodle.ID)
    end
    
    print("[AutoEncounter] âš”ï¸ Attacking with:", moveName, "(Slot", moveSlot .. ")")
    
    -- Try to click the move button in the battle GUI
    local movesFrame = battleGui:FindFirstChild("Moves", true) or 
                      battleGui:FindFirstChild("MovesFrame", true) or
                      battleGui:FindFirstChild("Actions", true)
    
    if movesFrame then
        local moveButtons = {}
        for _, child in pairs(movesFrame:GetDescendants()) do
            if child:IsA("GuiButton") and (child.Name:find("Move") or child.Name:find("Attack")) then
                table.insert(moveButtons, child)
            end
        end
        
        -- Click the move button at the specified slot
        if moveButtons[moveSlot] then
            task.wait(0.1)
            clickButton(moveButtons[moveSlot])
            task.wait(0.2)
        end
    end
    
    -- Fire the remote
    local success, err = pcall(function()
        battleAction:FireServer({
            {
                ActionType = "Attack",
                Action = moveName,
                User = myDoodle.ID,
                Target = enemyDoodle.ID
            }
        })
    end)
    
    if not success then
        warn("[AutoEncounter] Attack failed:", err)
        task.wait(0.5)
        return runAway(myDoodle.ID)
    end
    
    return true
end

-- CORRECTED BATTLE LOGIC
startBattle.OnClientEvent:Connect(function(battleData)
    if not env.AutoEncounter.Active then return end
    
    env.AutoEncounter.InBattle = true
    env.AutoEncounter.CurrentBattleData = battleData
    env.AutoEncounter.Stats.Encounters = env.AutoEncounter.Stats.Encounters + 1
    
    print("[AutoEncounter] ==========================================")
    print("[AutoEncounter] Battle #" .. env.AutoEncounter.Stats.Encounters)
    
    local myDoodle = battleData.Player1Party and battleData.Player1Party[1]
    local enemyDoodle = battleData.Player2Party and battleData.Player2Party[1]
    
    if not myDoodle or not enemyDoodle then
        warn("[AutoEncounter] Missing Doodle data")
        env.AutoEncounter.InBattle = false
        return
    end
    
    updateDisplay(enemyDoodle)
    
    local doodleName = enemyDoodle.Name or enemyDoodle.RealName or "Unknown"
    local doodleStars = enemyDoodle.Star or 0
    local doodleHT = enemyDoodle.HiddenTrait or false
    
    print("[AutoEncounter] Found:", doodleName, "| Stars:", doodleStars, "| HT:", doodleHT)
    
    -- Wait for battle to initialize
    task.wait(2.5)
    
    if not env.AutoEncounter.Active then 
        env.AutoEncounter.InBattle = false
        return 
    end
    
    local isPerfectMatch, matchReason = checkMatch(enemyDoodle)
    local isSpeciesMatch = checkSpeciesOnly(enemyDoodle)
    
    print("[AutoEncounter] Perfect Match?", isPerfectMatch, "| Reason:", matchReason)
    print("[AutoEncounter] Species Match?", isSpeciesMatch)
    
    -- DECISION LOGIC
    if isPerfectMatch then
        print("[AutoEncounter] âœ… PERFECT MATCH FOUND! Stopping...")
        env.AutoEncounter.Active = false
        toggleBtn.Text = "FOUND!"
        toggleBtn.BackgroundColor3 = Color3.fromRGB(255, 215, 0)
        
    elseif env.AutoEncounter.ChainMode and isSpeciesMatch then
        print("[AutoEncounter] ðŸ”— Chain Mode: Species match, attacking...")
        attack(myDoodle, enemyDoodle, env.AutoEncounter.MoveSlot)
        env.AutoEncounter.Stats.Chain = env.AutoEncounter.Stats.Chain + 1
        print("[AutoEncounter] Chain count:", env.AutoEncounter.Stats.Chain)
        
    else
        print("[AutoEncounter] âŒ No match (" .. matchReason .. "), running away...")
        runAway(myDoodle.ID)
        if env.AutoEncounter.ChainMode then
            env.AutoEncounter.Stats.Chain = 0
            print("[AutoEncounter] Chain broken!")
        end
    end
    
    print("[AutoEncounter] ==========================================")
    
    task.wait(1)
    env.AutoEncounter.InBattle = false
end)

-- Battle over handler
if battleOver then
    battleOver.OnClientEvent:Connect(function()
        print("[AutoEncounter] Battle ended")
        env.AutoEncounter.InBattle = false
    end)
end

-- Encounter loop
task.spawn(function()
    while true do
        task.wait(env.AutoEncounter.Delay)
        
        if env.AutoEncounter.Active and not env.AutoEncounter.InBattle then
            local zone = zoneInput.Text
            if zone and zone ~= "" then
                local encounterType = zoneEncounters[zone] or "WildGrass"
                
                local success, err = pcall(function()
                    dudeWhyld:FireServer(zone, encounterType)
                end)
                
                if not success then
                    warn("[AutoEncounter] Encounter failed:", err)
                end
            end
        end
    end
end)

-- Mount GUI
pcall(function()
    gui.Parent = game:GetService("CoreGui")
end)
if not gui.Parent then
    gui.Parent = playerGui
end

print("[AutoEncounter] ==========================================")
print("[AutoEncounter] Script loaded successfully!")
print("[AutoEncounter] LOGIC:")
print("[AutoEncounter]   âœ… Perfect match (all filters) = STOP")
print("[AutoEncounter]   ðŸ”— Chain Mode + Species match = ATTACK")
print("[AutoEncounter]   âŒ No match = RUN AWAY")
print("[AutoEncounter] ==========================================")
