-- Initialize _G.AutoEncounter first before using it
_G.AutoEncounter = _G.AutoEncounter or {
    Active = false,
    ChainMode = false,
    CurrentZone = nil,
    Delay = 2,
    Filters = {
        Species = "",
        Shiny = false,
        Misprint = false,
        HiddenTrait = false,
        Gender = "Any",
        MinStars = 0,
        MinIV = 0,
        MoveName = "Scratch"
    },
    Stats = {
        Encounters = 0,
        Chain = 0
    }
}

-- Use local reference instead of creating new env variable
