-- Settings
local Settings = {
    Enabled = false,
    TargetSpecies = "",
    MinStars = 1,
    OnlyMisprint = false,
    OnlyHiddenTrait = false,
    ChainMode = false,
    SelectedMoveSlot = 1,
    EncounterDelay = 2
}

local Stats = {
    Encounters = 0,
    Chain = 0,
    Found = 0
}

-- Helper Functions
local function GetBattleData()
    local battleData = nil
    
    pcall(function()
        if ClientModule.Battle and ClientModule.Battle.CurrentBattle then
            battleData = ClientModule.Battle.CurrentBattle
        end
    end)
    
    return battleData
end

local function GetOutDoodle()
    local battleData = GetBattleData()
    if not battleData then return nil end
    
    local success, result = pcall(function()
        local Party = battleData["Player1Party"]
        if Party and Party[1] then
            return Party[1]
        end
        return nil
    end)
    
    if success then
        return result
    end
    return nil
end

local function CheckMatch(wildDoodle)
    if not wildDoodle then return false, "No Doodle" end
    
    -- Check species
    if Settings.TargetSpecies ~= "" then
        local name = (wildDoodle.Name or wildDoodle.RealName or ""):lower()
        local target = Settings.TargetSpecies:lower()
        if not name:find(target, 1, true) then
            return false, "Wrong Species"
        end
    end
    
    -- Check stars
    local stars = wildDoodle.Star or 0
    if stars < Settings.MinStars then
        return false, "Low Stars (" .. stars .. "/" .. Settings.MinStars .. ")"
    end
    
    -- Check misprint
    if Settings.OnlyMisprint then
        local isMisprint = wildDoodle.Shiny or (wildDoodle.Color and wildDoodle.Color ~= "Normal")
        if not isMisprint then
            return false, "Not Misprint"
        end
    end
    
    -- Check hidden trait
    if Settings.OnlyHiddenTrait then
        if not wildDoodle.HiddenTrait then
            return false, "No Hidden Trait"
        end
    end
    
    return true, "Match Found!"
end

local function EndTurn()
    pcall(function()
        if getupvalues and ClientModule.Network and ClientModule.Network.BindEvent then
            local UpValues = getupvalues(ClientModule.Network.BindEvent)
            for i, v in pairs(UpValues) do
                if typeof(v) == "table" and v["ForceEnd"] ~= nil then
                    v.ForceEnd()
                    break
                end
            end
        end
    end)
end

local function PerformBattleAction(myDoodle, enemyDoodle, shouldRun)
    if not myDoodle then 
        print("No doodle provided for battle action")
        return 
    end
    
    print("Performing battle action - Run:", shouldRun)
    
    task.wait(1) -- Wait for battle to fully load
    
    local success, err = pcall(function()
        -- Hide action bar like in working script
        local MainGui = Player.PlayerGui:FindFirstChild("MainGui")
        if MainGui then
            local BattleGui = MainGui:FindFirstChild("MainBattle")
            if BattleGui then
                local BottomBar = BattleGui:FindFirstChild("BottomBar")
                if BottomBar then
                    local ActionBar = BottomBar:FindFirstChild("Actions")
                    if ActionBar then
                        ActionBar.Visible = false
                    end
                end
            end
        end
        
        if shouldRun then
            -- Run away
            print("Running from battle...")
            ClientModule.Network:post("BattleAction", {
                [1] = {
                    ["Target"] = "RunAway",
                    ["ActionType"] = "Run",
                    ["User"] = myDoodle.ID,
                }
            })
        else
            -- Attack with selected move
            if myDoodle.Moves and myDoodle.Moves[Settings.SelectedMoveSlot] then
                local moveName = myDoodle.Moves[Settings.SelectedMoveSlot].Name
                print("Attacking with move:", moveName, "from slot", Settings.SelectedMoveSlot)
                
                ClientModule.Network:post("BattleAction", {
                    [1] = {
                        ["Target"] = enemyDoodle and enemyDoodle.ID or myDoodle.ID,
                        ["ActionType"] = "Attack",
                        ["Action"] = moveName,
                        ["User"] = myDoodle.ID,
                    }
                })
            else
                warn("No valid move in slot", Settings.SelectedMoveSlot)
                -- Fallback to run if no move available
                ClientModule.Network:post("BattleAction", {
                    [1] = {
                        ["Target"] = "RunAway",
                        ["ActionType"] = "Run",
                        ["User"] = myDoodle.ID,
                    }
                })
            end
        end
        
        EndTurn()
    end)
    
    if not success then
        warn("Battle action failed:", err)
    end
end

-- Battle Event Handler
StartBattle.OnClientEvent:Connect(function(battleData)
    print("=== BATTLE STARTED ===")
    print("Farming enabled:", Settings.Enabled)
    
    if not Settings.Enabled then 
        print("Farming is disabled, ignoring battle")
        return 
    end
    
    if not battleData then
        warn("No battle data received")
        return
    end
    
    print("Battle data received, processing...")
    
    local wildDoodle = battleData.Player2Party and battleData.Player2Party[1]
    local myDoodle = battleData.Player1Party and battleData.Player1Party[1]
    
    if not wildDoodle then
        warn("No wild doodle found in battle data")
        return
    end
    
    if not myDoodle then
        warn("No player doodle found in battle data")
        return
    end
    
    print("Wild Doodle found:", wildDoodle.Name or wildDoodle.RealName or "Unknown")
    print("My Doodle found:", myDoodle.Name or myDoodle.RealName or "Unknown")
    
    Stats.Encounters = Stats.Encounters + 1
    
    local name = wildDoodle.Name or wildDoodle.RealName or "Unknown"
    local stars = wildDoodle.Star or 0
    local isMisprint = wildDoodle.Shiny or (wildDoodle.Color and wildDoodle.Color ~= "Normal")
    
    print(string.format("=== Encounter #%d ===", Stats.Encounters))
    print(string.format("Species: %s", name))
    print(string.format("Stars: %d‚≠ê", stars))
    print(string.format("Misprint: %s", isMisprint and "YES" or "NO"))
    if wildDoodle.HiddenTrait then
        print("Hidden Trait:", wildDoodle.HiddenTrait)
    end
    
    -- Check if matches filters
    local isMatch, reason = CheckMatch(wildDoodle)
    
    if isMatch then
        print("‚úÖ ===== MATCH FOUND! =====")
        print("Reason:", reason)
        Stats.Found = Stats.Found + 1
        
        if not Settings.ChainMode then
            Settings.Enabled = false
            print("üéâ Target found! Stopping farm.")
        else
            Stats.Chain = Stats.Chain + 1
            print("Chain continued:", Stats.Chain)
        end
        
        print("Not running - let player catch it!")
        return
    else
        print("‚ùå No match -", reason)
        
        if Settings.ChainMode then
            -- Check if same species
            local isSameSpecies = false
            if Settings.TargetSpecies ~= "" then
                local wildName = (wildDoodle.Name or wildDoodle.RealName or ""):lower()
                local targetName = Settings.TargetSpecies:lower()
                isSameSpecies = wildName:find(targetName, 1, true) ~= nil
                print("Species match check:", isSameSpecies and "YES" or "NO")
            end
            
            if isSameSpecies then
                print("Same species but wrong stats - attacking to chain!")
                Stats.Chain = Stats.Chain + 1
                PerformBattleAction(myDoodle, wildDoodle, false)
            else
                print("Different species - running away!")
                PerformBattleAction(myDoodle, wildDoodle, true)
            end
        else
            print("Chain mode disabled - running from battle")
            PerformBattleAction(myDoodle, wildDoodle, true)
        end
    end
    
    print("=== BATTLE PROCESSING COMPLETE ===")
end)

