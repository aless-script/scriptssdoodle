                print("Adding to database...")
                
                zoneEncounters[DetectedZones.CurrentZone] = DetectedZones.CurrentEncounterType or "WildGrass"
                DetectedZones.IsKnownZone = true
                
                print("‚úÖ Zone added successfully!")
                print("You can now farm in this zone!")
            elseif DetectedZones.IsKnownZone then
                print("‚úì Zone already in database!")
            end
        end)
    end
end)

