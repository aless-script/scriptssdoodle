-- Make draggable
local dragging, dragInput, dragStart, startPos

local function updateDrag(input)
    local delta = input.Position - dragStart
    MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

TitleBar.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = MainFrame.Position
        
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

TitleBar.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        updateDrag(input)
    end
end)

-- Parent GUI
ScreenGui.Parent = Player:WaitForChild("PlayerGui")

print("‚úì GUI created")

-- Encounter Loop
task.spawn(function()
    print("‚úì Encounter loop started")
    local lastZone = nil
    
    while task.wait(1) do
        if Settings.Enabled then
            local char = Player.Character
            if char and char:FindFirstChild("HumanoidRootPart") then
                -- Try to detect current zone from workspace
                local zone = nil
                local rootPart = char.HumanoidRootPart
                
                -- Method 1: Check if player is inside a zone folder
                for _, obj in ipairs(Workspace:GetChildren()) do
                    if obj:IsA("Folder") or obj:IsA("Model") then
                        if obj.Name:match("^%d%d%d_") or zoneEncounters[obj.Name] then
                            -- Check if player is within this zone's bounds
                            local regionPart = obj:FindFirstChild("Region") or obj:FindFirstChildWhichIsA("BasePart", true)
                            if regionPart then
                                local distance = (rootPart.Position - regionPart.Position).Magnitude
                                if distance < 500 then -- Within zone range
                                    zone = obj.Name
                                    break
                                end
                            else
                                -- No specific region part, assume we're in it if it's the closest zone
                                zone = obj.Name
                                break
                            end
                        end
                    end
                end
                
                -- Method 2: Try to get zone from PlayerData
                if not zone then
                    pcall(function()
                        local PlayerData = Player:FindFirstChild("PlayerData")
                        if PlayerData then
                            local CurrentZone = PlayerData:FindFirstChild("CurrentZone")
                            if CurrentZone and CurrentZone.Value then
                                zone = CurrentZone.Value
                            end
                        end
                    end)
                end
                
                if zone ~= lastZone then
                    if zone then
                        print("üìç Zone detected:", zone)
                        DetectedZones.CurrentZone = zone
                        DetectedZones.IsKnownZone = zoneEncounters[zone] ~= nil
                        DetectedZones.CurrentEncounterType = zoneEncounters[zone] or "WildGrass"
                        
                        if zoneEncounters[zone] then
                            print("‚úì Zone is valid for encounters")
                        else
                            if zone:match("^%d%d%d_") then
                                print("‚úì Auto-adding zone to encounter list")
                                zoneEncounters[zone] = "WildGrass"
                                DetectedZones.IsKnownZone = true
                                DetectedZones.CurrentEncounterType = "WildGrass"
                            else
                                warn("‚ö†Ô∏è Zone not in encounter list - use Learning Mode")
                            end
                        end
                    else
                        print("‚ö†Ô∏è No zone detected")
                        DetectedZones.CurrentZone = "
