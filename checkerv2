local function UpdateActiveFilters()
    local filters = {}
    if Settings.TargetSpecies ~= "" then table.insert(filters, "Species: " .. Settings.TargetSpecies) end
    if Settings.MinStars > 0 then table.insert(filters, "Min Stars: " .. Settings.MinStars .. "‚≠ê") end
    if Settings.OnlyMisprint then table.insert(filters, "Misprint Only") end
    if Settings.OnlyHiddenTrait then table.insert(filters, "Hidden Trait Only") end
    if Settings.TargetAbility ~= "" then table.insert(filters, "Ability: " .. Settings.TargetAbility) end
    if Settings.TargetGender ~= "Any" then table.insert(filters, "Gender: " .. Settings.TargetGender) end
    if Settings.TargetSkin ~= "Any" then table.insert(filters, "Skin: " .. Settings.TargetSkin) end
    
    if #filters == 0 then
        activeFiltersLabel.Text = "üéØ ACTIVE FILTERS:\nNone - will catch any Doodle"
        activeFiltersLabel.BackgroundColor3 = Color3.fromRGB(45, 45, 55)
    else
        activeFiltersLabel.Text = "üéØ ACTIVE FILTERS:\n" .. table.concat(filters, ", ")
        activeFiltersLabel.BackgroundColor3 = Color3.fromRGB(60, 100, 60)
    end
end

