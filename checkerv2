print("Loading Auto Farm...")

-- Check executor compatibility
local isCompatible = true
local missingFunctions = {}

if not game.IsLoaded then
    table.insert(missingFunctions, "game.IsLoaded")
    isCompatible = false
end

if not isCompatible then
    warn("‚ö†Ô∏è Executor may not be fully compatible!")
    warn("Missing functions:", table.concat(missingFunctions, ", "))
    warn("Script will attempt to run anyway...")
    task.wait(2)
end

-- Wait for game
if game.IsLoaded then
    repeat task.wait() until game:IsLoaded()
else
    task.wait(5) -- Fallback wait
end

if game.GameId == 0 then
    local success = pcall(function()
        game:GetPropertyChangedSignal("GameId"):Wait()
    end)
    if not success then
        task.wait(5)
    end
end

